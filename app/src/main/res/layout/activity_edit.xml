<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grid"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="300dp"
            android:background="@drawable/ic_close_black_24dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_done_black_24dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/diarySetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diaryYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="2020"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="년 "
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/diaryMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="5"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="월 "
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/diaryDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="24"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="일 "
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/diaryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="일"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barunhippie"
                        android:text="요일"
                        android:textColor="@color/textPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/emotionRadioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/btn_smile"
                            android:layout_weight="1"
                            android:button="@null"
                            android:fontFamily="@font/barunhippie"
                            android:gravity="center"
                            android:text="좋아"
                            android:textColor="@color/color_good"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/btn_soso"
                            android:layout_weight="1"
                            android:button="@null"
                            android:fontFamily="@font/barunhippie"
                            android:gravity="center"
                            android:text="그냥 그래"
                            android:textColor="@color/color_soso"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/btn_angry"
                            android:layout_weight="1"
                            android:button="@null"
                            android:fontFamily="@font/barunhippie"
                            android:gravity="center"
                            android:text="화나"
                            android:textColor="@color/color_angry"
                            android:textSize="15sp" />
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/emotionRadioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/btn_happy"
                            android:layout_weight="1"
                            android:button="@null"
                            android:fontFamily="@font/barunhippie"
                            android:gravity="center"
                            android:text="행복해"
                            android:textColor="@color/color_happy"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/btn_relax"
                            android:layout_weight="1"
                            android:button="@null"
                            android:fontFamily="@font/barunhippie"
                            android:gravity="center"
                            android:text="편안해"
                            android:textColor="@color/color_relax"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/btn_sad"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:fontFamily="@font/barunhippie"
                            android:gravity="center"
                            android:text="슬퍼"
                            android:textColor="@color/color_sad"
                            android:textSize="15sp" />
                    </RadioGroup>
                </LinearLayout>


                <ImageView
                    android:id="@+id/diaryEmoji"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/add_ubu">

                </ImageView>


                <EditText
                    android:id="@+id/diaryContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_layout"
                    android:fontFamily="@font/barunhippie"
                    android:gravity="top"
                    android:hint="일기를 적어보세요 :)"
                    android:lineSpacingExtra="8dp"
                    android:minHeight="200dp"
                    android:padding="15dp"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/diaryPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/add_ubu">

                </ImageView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>